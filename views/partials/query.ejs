<section id="query" class="mb-3">
  <form action="/query" method="post">
    <label for="query" class="form-label">Artist query</label>
    <div class="input-group gap-1 mb-1">
      <input
        type="text"
        name="query"
        id="query"
        class="form-control rounded-2"
        value="<%= appData.query.input.value %>"
        <% if (appData.query.input.isDisabled) { %>
          disabled
        <% } %>
      />
      <span>
        <input 
          type="submit" 
          class="btn btn-primary rounded-2" 
          value="Submit" 
          <% if (appData.query.submit.isDisabled) { %>
            disabled
          <% } %>
        />
      </span>
      <span>
        <input
          type="submit"
          class="btn btn-primary rounded-2"
          value="Clear"
          formaction="/clear"
          formmethod="get"
        /> 
      </span>
    </div>
    <% if (appData.query.isFailed) { %>
      <p class="text-danger">The search returned no matches.</p>
    <% } %>
  </form>
</section>
