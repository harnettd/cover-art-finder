<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="style/default.css" />
    <title>Cover Art Finder</title>
  </head>

  <body>
    <main class="container">
      <h1>Cover Art Finder</h1>

      <section id="query">
        <h2>Query Artist</h2>
        <form action="/query" method="post">
          <label class="form-label" for="query">Artist:</label>
          <% if (locals.appData.query) { %>
          <input
            type="text"
            name="query"
            id="query"
            class="form-control"
            value="<%= appData.query %>"
            disabled
          />
          <input
            type="submit"
            class="btn btn-primary"
            value="Submit"
            disabled
          />
          <% } else { %>
          <input
            type="text"
            name="query"
            id="query"
            class="form-control"
            required
          />
          <input type="submit" class="btn btn-primary" value="Submit" />
          <% } %>
        </form>
      </section>

      <% if (locals.appData.artists && appData.artists.length >= 1) { %>
      <section id="disambiguation">
        <h2>Disambiguation</h2>
        <form action="/disambiguate" method="post">
          <% appData.artists.forEach((artist) => { %>
          <div class="form-check">
            <input
              type="radio"
              class="form-check-input"
              name="artistId"
              id="<%= artist.id %>"
              value="<%= artist.id %>"
            />
            <label clas="form-check-label" for="<%= artist.id %>">
              <ul>
                <li>Name: <%= artist.name %></li>
                <li>Score: <%= artist.score %></li>
                <li>Country: <%= artist.country %></li>
                <li>Note: <%= artist.disambiguation %></li>
              </ul>
            </label>
          </div>
          <% }) %>
          <input type="submit" class="btn btn-primary" value="Submit" />
        </form>
      </section>
      <% } %> 
      
      <% if (locals.appData.albums && appData.albums.length > 0) { %>
      <section id="album-selection">
        <h2>Album Selection</h2>
        <form action="/album-selection" method="post">
          <% appData.albums.forEach((album) => { %>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              name="<%= album.id %>"
              id="<%= album.id %>"
            />
            <label class="form-check-label" for="<%= album.id %>">
              <%= album.title %>
            </label>
          </div>
          <% }) %>
          <input type="submit" class="btn btn-primary" value="Submit" />
        </form>
      </section>
      <% } %>

      <% if (locals.appData.coverArtUrls && appData.coverArtUrls.length > 0) { %>
      <section id="Cover Art">
        <div class="row">
          <% appData.coverArtUrls.forEach((url) => { %>
          <div class="col">
              <img src="<%= url %>" alt="">
          </div>
          <% }) %>
        </div>
      </section>
      <% } %>

    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
