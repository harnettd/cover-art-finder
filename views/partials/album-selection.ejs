<% if (appData.artistName && appData.albums.length > 0) { %>
	<section id="album-selection" class="mb-3">
		<p class="mb-1">Select albums</p>
		<form action="/album-selection" method="post">
			<% appData.albums.forEach((album) => { %>
				<div class="form-check">
					<input
						class="form-check-input"
						type="checkbox"
						name="<%= album.id %>"
						id="<%= album.id %>"
					/>
					<label class="form-check-label" for="<%= album.id %>">
						<%= album.title %>
					</label>
				</div>
			<% }) %>
			<input type="submit" class="btn btn-primary rounded-2 mt-1" value="Submit" />
		</form>
	</section>
<% } %> 